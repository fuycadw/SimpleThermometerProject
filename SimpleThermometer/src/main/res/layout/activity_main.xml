<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@color/holo_blue"
    android:id="@+id/relativeLayout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/imageViewFair"
            android:layout_gravity="left"
            android:src="@drawable/ic_fair_light"
            android:layout_weight="1"
            android:contentDescription="@string/content_description_fair_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/imageViewChange"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/ic_change_light"
            android:layout_weight="1"
            android:contentDescription="@string/content_description_change_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/imageViewRain"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/ic_rain_or_wind_light"
            android:layout_weight="1"
            android:contentDescription="@string/content_description_rain_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/imageViewStorm"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/ic_storm_light"
            android:layout_weight="1"
            android:contentDescription="@string/content_description_storm_icon" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_size_temperature"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="@string/default_temperature_in_celcius"
        android:id="@+id/textViewTemperature"
        android:layout_centerInParent="true"
        android:gravity="center" />

</RelativeLayout>
